{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "everything",
  "version": "0.1.0",
  "identifier": "com.everything.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3333",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "plugins" : {

  },
  "app": {
    "windows": [
      {
        "title": "everything",
        "width": 1200,
        "height": 800,
        "visible": false,
        "resizable": true,
        "fullscreen": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
